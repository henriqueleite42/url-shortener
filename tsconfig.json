{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["es6"],
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@Entities/*": ["Entities/*"],
      "@Controllers/*": ["Controllers/*"],
      "@Utils/*": ["Utils/*"],
      "@Routes/*": ["Routes/*"],
      "@Config/*": ["Config/*"],
      "@Assets/*": ["Assets/*"],
      "@Types/*": ["Types/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
